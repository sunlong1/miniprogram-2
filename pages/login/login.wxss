/**index.wxss**/
.container {
  padding: 100rpx 30rpx;
}
.wx-button{
  border-radius: 10rpx;
  background-color: #1fc8db;
  background-image: linear-gradient(
141deg
,#9fb8ad 0%,#1fc8db 51%,#2cb5e8 75%);
  color: #fff;
  font-weight: 200;
}
.phone-login{
  color: var(--themeColor);
  text-align: center;
  margin-top: 30rpx;
}
.login-title {
  background-color: #1fc8db;
    background-image: linear-gradient(
141deg
,#9fb8ad 0%,#1fc8db 51%,#2cb5e8 75%);
  padding: 40rpx 30rpx;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
}
.phone-box{
  background: #fff;
  width:630rpx;
  padding:60rpx 0 40rpx;
  border-radius: 10rpx;
  margin: 0 auto;
}
.phone-num,.code{
  border-bottom: 1px solid #A9A9A9;
  padding:25rpx 0;
  margin-top: 20rpx;
}
.weui-input{
  padding:10rpx 0;
}
.code{
  position: relative;
}
.get-code{
  border-radius: 10rpx;
  border:1px solid #2cb5e8;
  color:#2cb5e8;
  width:162rpx;
  padding:16rpx 0;
  text-align: center;
  position: absolute;
  top:27rpx;
  right:0;
  z-index: 9;
  font-size: 26rpx;
}
.phone-login-btn{
  background-color: #1fc8db;
  background-image: linear-gradient(
141deg
,#9fb8ad 0%,#1fc8db 51%,#2cb5e8 75%);
  color:#fff;
  text-align: center;
  margin-top: 40rpx;
  padding:20rpx 0;
  border-radius: 10rpx;
  font-weight: 500;
  width: 100% !important;
  font-weight: normal;
}
.register {
  color: #1fc8db;
  text-align: right;
  margin-bottom: 100rpx;
}
.close{
  width:80rpx;
  height:80rpx;
  margin: 40rpx auto ;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}